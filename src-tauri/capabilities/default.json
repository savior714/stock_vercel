{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "http:default",
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://query1.finance.yahoo.com/*"
        },
        {
          "url": "https://query2.finance.yahoo.com/*"
        },
        {
          "url": "https://production.dataviz.cnn.io/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-read-recursive",
      "allow": [
        {
          "path": "$APPLOCALDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write-recursive",
      "allow": [
        {
          "path": "$APPLOCALDATA/*"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-read",
      "allow": [
        {
          "path": "$APPLOCALDATA"
        }
      ]
    },
    {
      "identifier": "fs:allow-app-write",
      "allow": [
        {
          "path": "$APPLOCALDATA"
        }
      ]
    }
  ]
}